/**
  * @brief GPIO Initialization Function
  * @param None
  * @retval None
  */
static void MX_GPIO_Init(void)
{
  GPIO_InitTypeDef GPIO_InitStruct = {0};

  /* GPIO Ports Clock Enable */
  __HAL_RCC_GPIOH_CLK_ENABLE();
  __HAL_RCC_GPIOA_CLK_ENABLE();
  __HAL_RCC_GPIOB_CLK_ENABLE();
  __HAL_RCC_GPIOC_CLK_ENABLE();
  __HAL_RCC_GPIOD_CLK_ENABLE();

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(SU_SICAKLIK_SENSOR_GPIO_Port, SU_SICAKLIK_SENSOR_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOB, DHT22_SENSOR_Pin|RESET_TAHLIYE_ROLE_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pin Output Level */
  HAL_GPIO_WritePin(GPIOD, FAN_1_ROLE_Pin|FAN_2_ROLE_Pin|LED_ROLE_Pin|PH_DUSURUCU_ROLE_Pin
                          |PH_ARTIRICI_ROLE_Pin|EC_ROLE_Pin|SU_ROLE_Pin, GPIO_PIN_RESET);

  /*Configure GPIO pin : SU_SICAKLIK_SENSOR_Pin */
  GPIO_InitStruct.Pin = SU_SICAKLIK_SENSOR_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(SU_SICAKLIK_SENSOR_GPIO_Port, &GPIO_InitStruct);

  /*Configure GPIO pins : DHT22_SENSOR_Pin RESET_TAHLIYE_ROLE_Pin */
  GPIO_InitStruct.Pin = DHT22_SENSOR_Pin|RESET_TAHLIYE_ROLE_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOB, &GPIO_InitStruct);

  /*Configure GPIO pins : FAN_1_ROLE_Pin FAN_2_ROLE_Pin LED_ROLE_Pin PH_DUSURUCU_ROLE_Pin
                           PH_ARTIRICI_ROLE_Pin EC_ROLE_Pin SU_ROLE_Pin */
  GPIO_InitStruct.Pin = FAN_1_ROLE_Pin|FAN_2_ROLE_Pin|LED_ROLE_Pin|PH_DUSURUCU_ROLE_Pin
                          |PH_ARTIRICI_ROLE_Pin|EC_ROLE_Pin|SU_ROLE_Pin;
  GPIO_InitStruct.Mode = GPIO_MODE_OUTPUT_PP;
  GPIO_InitStruct.Pull = GPIO_NOPULL;
  GPIO_InitStruct.Speed = GPIO_SPEED_FREQ_LOW;
  HAL_GPIO_Init(GPIOD, &GPIO_InitStruct);

}

/* USER CODE BEGIN 4 */

void Su_Seviye_Degeri_Okuma()
{

	HAL_ADC_Start(&hadc1);

	if(HAL_ADC_PollForConversion(&hadc1, 100000) == HAL_OK)
	{
		Su_Seviye_Degeri = HAL_ADC_GetValue(&hadc1);
	}

	HAL_ADC_Stop(&hadc1);
}


void PH_Deger_Okuma()
{
	uint16_t PH_adc = 0;
	HAL_ADC_Start(&hadc3);

	if(HAL_ADC_PollForConversion(&hadc3, 100000) == HAL_OK)
	{
		PH_adc = HAL_ADC_GetValue(&hadc3);
		PH_Deger = (m * (PH_adc * (5.0 / 4095.0) ) + b);
	}

	HAL_ADC_Stop(&hadc3);
}


/* USER CODE END 4 */


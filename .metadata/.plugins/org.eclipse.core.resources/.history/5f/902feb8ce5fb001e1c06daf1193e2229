  BH1750_Init(&hi2c2);
  BH1750_SetMode(&hi2c2, CONTINUOUS_HIGH_RES_MODE_2);

  BMP180_Baslat();
*/
  dht22_init();
  HAL_Delay(500);

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
/*
